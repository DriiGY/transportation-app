<MainWindow>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: app.colors.white
        Rectangle:
            pos: self.pos
            size: self.size

    ScreenManager:
        id: scrn_mngr
        Screen:
            name: 'scrn_splash'
            Splash:
                id: splash
        Screen:
            name:"scrn_login"
            Login:
                id:login
        Screen:
            name: 'scrn_home'
            Home:
                id: home
        Screen:
            name: 'scrn_booking_details'
            BookingDetails:
                id: booking_details
        Screen:
            name: 'scrn_ticket_details'
            TicketDetails:
                id: ticket_details_info
     
