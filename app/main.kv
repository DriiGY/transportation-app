<MainWindow>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: app.colors.white
        Rectangle:
            pos: self.pos
            size: self.size
    MDNavigationLayout:
        id:layout
           
        ScreenManager:
            id: scrn_mngr
            Screen:
                name: 'scrn_settings'
                SettingsScreen:
                    id: setting
            Screen:
                name: 'scrn_trips'
                Trips:
                    id: trips
            Screen:
                name: 'scrn_wallet'
                Wallet:
                    id: wallet
            Screen:
                name: 'scrn_add_payment'
                AddPayment:
                    id: add_payment  
            Screen:
                name: 'scrn_add_credit_card_details'
                AddCreditDetails:
                    id: add_credit_details
            Screen:
                name: 'scrn_personal_phone'
                PersonalPhone:
                    id: personal_phone
            Screen:
                name: 'scrn_personal_password'
                PersonalPassword:
                    id: personal_password
            Screen:
                name: 'scrn_personal'
                PersonalScreen:
                    id: personal
            Screen:
                name: 'scrn_personal_firstname'
                PersonalFirstName:
                    id: personal_firstname
            Screen:
                name: 'scrn_personal_lastname'
                PersonalLastName:
                    id: personal_lastname       
            Screen:
                name: 'scrn_faq'
                Faq:
                    id: faq               
            Screen:
                name: 'scrn_home'
                Home:
                    id: home
            Screen:
                name: 'scrn_splash'
                Splash:
                    id: splash
            Screen:
                name:"scrn_login"
                Login:
                    id:login
            Screen:
                name:"scrn_signup"
                Signup:
                    id:signup
            
            Screen:
                name: 'scrn_booking_details'
                BookingDetails:
                    id: booking_details
            Screen:
                name: 'scrn_ticket_details'
                TicketDetails:
                    id: ticket_details_info
        MDNavigationDrawer:
            id:nav_drawer
            open_progress:.2
            swipe_distance:4
            anchor:"right"
            BoxLayout:
                orientation: "vertical"
                MDLabel:
                    text: "TransportYoiu"
                    font_style: "Caption"
                    adaptive_height: True
                    color:rgba("#6068EB")
                    bold:True
                MDList:
                    OneLineListItem:
                        text: "Home"
                        on_release:
                            scrn_mngr.current = "scrn_home"
                            nav_drawer.set_state("close")
                
                    OneLineListItem:
                        text: "Payment method"

                    OneLineListItem:
                        text: "Settings"
                        on_release:
                            scrn_mngr.current = "scrn_settings"
                            nav_drawer.set_state("close")
                
                    OneLineListItem:
                        text: "Logout"
                        on_release:
                            scrn_mngr.current = "scrn_login"
                            nav_drawer.set_state("close")
                Widget: 
            
