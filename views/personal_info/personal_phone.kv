
<PersonalPhone>:
    orientation: "vertical"
    #padding:[dp(2)]
    canvas.before:
        Color:
            rgba:[1,0,0,0]
        Rectangle:
            pos:self.pos    
            size:self.size
    padding:dp(10)
    BoxLayout:
        canvas.before:
            Color:
                rgba:[0,0,0,0]
            Rectangle:
                pos:self.pos    
                size:self.size
        orientation:"horizontal"
        size_hint_y: .15
        padding:[dp(5), 0, dp(10), 0]
        spacing:dp(5)
        ButtonIcon:
            size_hint: .2, 1
            text:icon("icon-chevron-left")
            color:[0,0,0,1]
            bold:True
            font_size:app.fonts.size.h1
            on_release:
                root.parent.manager.current = "scrn_personal"
                root.parent.manager.transition.direction = "left"
        MDLabel:
       
            size_hint: .8, 1
            text:"Edit phone number"
            color:[0,0,0,1]
            font_size:app.fonts.size.h2
    BoxLayout:
        orientation:"vertical"
        spacing:dp(10)
        padding:[dp(10), 0, dp(10), 0]
        ClickableTextFieldNumber:
            id:old_phone_number
            hint_text: "Old phone number:"
            input_filter:"int"
        ClickableTextFieldNumber:
            id:new_phone_number
            hint_text: "New phone number:"
            input_filter:"int"
        MDRaisedButton:
            text: "Update number"  # create dialog so we add code from email
            pos_hint:{"center_x":.5}
            md_bg_color: rgba("#6167E9")
            on_release:root.update_phone_number()
    Widget:


<ClickableTextFieldNumber>:
    size_hint: 1, None
    height: name.height
    
    MDTextField:
        id: name
        hint_text: root.hint_text
        color_mode: 'custom'
        line_color_focus: rgba("#6068EB")
        line_color_normal: rgba("#D0D0D0")
        hint_text_color_normal: rgba('#D0D0D0')
        hint_text_color_focus: rgba("#6068EB")
        multiline:False
        text_color_focus:app.colors.black
        input_filter:root.input_filter