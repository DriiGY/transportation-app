

<Splash>:
    id:splash
    canvas.before:
        Color:
            rgba: rgba("#6068EB")
        Rectangle:
            pos:self.pos
            size:self.size
    BoxLayout:
        orientation:"vertical"
        Label:
            
            size_hint: 1, .1
            text: "TransportYoiu"
            font_size:dp(46)
            bold:True
        Label:
            
            size_hint: 1, .05
            text: "Get the transport most \n suitable to you"
            font_size:app.fonts.size.h3
            valign:"middle"
            halign:"center"

        # Add gif image
        Image:
           
            id:ellipse_image
            size_hint: .5, .5
            pos_hint:{"center_y": .5, "center_x": .5 }
            source:"assets/imgs/giphy.gif"
            allow_stretch: True
            anim_delay: .1
            # anim loop: 1
            anim_reset: True
            canvas.before:
                Color:
                    rgb: 1,1,1,1
                Ellipse:
                    
                    size:[dp(300), dp(300)]
                    pos:[self.center_x - 150, self.center_y - 150]
        BoxLayout:
            pos_hint:{"center_y": .3, "center_x": .5}
            padding: dp(10)
            size_hint_x: .7
            size_hint_y: .01
            MDProgressBar:
                id:progress
                orientation:"horizontal"
                # type
                type:"indeterminate"
                # Progress duration
                running_duration:2
                # Catching duration
                catching_duration:1
                color:rgba("#ffffff")
        
      